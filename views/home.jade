extends layout

block content
	div(class="sidebar medium-4 large-3 columns")
		h1 Jump!
		h3 This site is about jumping
		p Jumping is great, send me pics
		a(href="#" data-reveal-id="uploadForm") Upload your picture here!
		form(id="uploadForm" class="reveal-modal" data-reveal name="upload" action="/upload" method="post" enctype="multipart/form-data")
			div(class="row")
				div(class="small-6 columns")
					label Title:
						input(name="title" type="text")
					label Short Description:
						textarea(name="description" type="textarea")
					input(class="imgUpload" name="picture" type="file")
				div(class="small-6 columns editImage")
					div(class="imgPreview")
						img(src="" id="upload")
					a(class="button rotate rotateLeft") Left
					a(class="button rotate rotateRight") Right
			div(class="row")
				div(class="small-12 columns text-center")
					button(type="submit") Submit!
			a(class="close-reveal-modal") &#215;
	div(class="row")
		div(class="medium-4 large-3 columns")
		div(class="small-12 medium-8 large-9 columns images")
			div(class="grid-sizer")
			each picture in pictures
				div(class="image")
					div(class="imgContainer")
						h4(class="imgText imgTitle")=picture.title
						p(class="imgText imgDescription")=picture.description
						img(src="images/#{picture.url}")